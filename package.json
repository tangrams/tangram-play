{
  "name": "tangram-play",
  "version": "0.0.1",
  "description": "GUI editor for Tangram",
  "main": "index.js",
  "private": true,
  "scripts": {
    "postinstall": "ln -nsf ../src/js node_modules/app",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "jshint *.js src/ || true; jscs *.js src/ || true",
    "build": "modernizr -c modernizr-config.json -d build/js; gulp build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tangrams/tangram-play.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tangrams/tangram-play/issues"
  },
  "homepage": "https://github.com/tangrams/tangram-play",
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "babel-plugin-transform-runtime": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "babel-runtime": "^6.2.0",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.11",
    "csswring": "^4.0.0",
    "gulp": "^3.9.0",
    "gulp-livereload": "^3.8.1",
    "gulp-plumber": "^1.0.1",
    "gulp-postcss": "^6.0.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.4.2",
    "gulp-util": "^3.0.7",
    "jscs": "^2.4.0",
    "jshint": "^2.8.0",
    "modernizr": "^3.1.0",
    "postcss-color-hex-alpha": "^2.0.0",
    "postcss-custom-properties": "^5.0.0",
    "postcss-import": "^7.1.0",
    "postcss-nested": "^1.0.0",
    "postcss-reporter": "^1.3.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "dependencies": {
    "clipboard": "^1.5.5",
    "codemirror": "5.8.0",
    "gsap": "^1.18.0",
    "leaflet": "^1.0.0-beta.2",
    "leaflet-hash": "^0.2.1",
    "request": "^2.65.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ],
          "plugins": [
            "transform-runtime"
          ]
        }
      ],
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "tangram": "global:Tangram",
    "./src/js/vendor/colors.js": "Colors"
  }
}
